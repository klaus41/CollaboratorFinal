@model IEnumerable<WebUI.Models.Email>

@{
    ViewBag.Title = "Email";
}
<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">Email</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fa fa-minus"></i>
            </button>
            <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                <i class="fa fa-times"></i>
            </button>
        </div>
    </div>

    <div class="box-body">
        <table class="table table-bordered table-stibed dataTable">
            <thead>
                <tr role="row">
                    <th>
                        Afsender
                        @*@Html.DisplayNameFor(model => model.Sender)*@
                    </th>
                    <th>
                        Modtager
                        @*@Html.DisplayNameFor(model => model.Recipiant)*@
                    </th>
                    <th>
                        Dato - Modtaget
                        @*@Html.DisplayNameFor(model => model.ReceivedDate)*@
                    </th>
                    <th>
                        Emne
                        @*@Html.DisplayNameFor(model => model.Subject)*@
                    </th>
                    <th>Temaer</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr role="row">
                        <td>
                            @Html.DisplayFor(modelItem => item.Sender)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Recipiant)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReceivedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subject)
                        </td>
                        <td>
                            @foreach (var sc in item.SearchCriteria)
                            {
                                foreach (var theme in sc.Themes)
                                {
                                    @Html.DisplayFor(modelItem => theme.Title) <br />
                                }
                            }

                            @*@Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
                                @Html.ActionLink("Details", "Details", new { id=item.ID }) |
                                @Html.ActionLink("Delete", "Delete", new { id=item.ID })*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
