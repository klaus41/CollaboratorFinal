@model IEnumerable<WebUI.Models.Theme>
@{
    ViewBag.Title = "Themes";
}




<h2>Themes</h2>
<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(Model => Model.Title)</th>
                    <th>@Html.DisplayNameFor(Model => Model.SearchCriterias)</th>
                </tr>
            </thead>
            <tbody >
                    @foreach (var item in Model)
                    {
                        <tr class="table-row" data-href="/SpecificTheme" >
                            <td>@Html.DisplayFor(modelItem => item.Title)</td>
                            <td>In Progress</td>
                            @*<td>
                                @foreach (var sc in item.SearchCriteria)
                                { @Html.DisplayFor(modelItem => sc.Criteria) }
                            </td>*@

                        </tr>
                    }
                </tbody>
        </table>
    </div>
</div>

