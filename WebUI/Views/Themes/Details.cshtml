@model WebUI.Models.Theme

@{
    ViewBag.Title = "Details";
}

<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">@Html.DisplayFor(Model => Model.Title) - Detaljer</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fa fa-minus"></i>
            </button>
            <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                <i class="fa fa-times"></i>
            </button>
        </div>
    </div>
    <div class="box-body">
        <table class="table table-bordered table-stibed dataTable">
            <thead>
                <tr role="row">
                    <th>
                        Søgestrenge
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.SearchCriterias)
                {
                    <tr role="row">
                        <td>
                            @Html.DisplayFor(modelItem => item.Criteria)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="box-body">
        <table class="table table-bordered table-stibed dataTable">
            <thead>
                <tr role="row">
                    <th>
                        E-mails
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.Emails)
                {
                    <tr role="row">
                        <td>
                            @Html.DisplayFor(modelItem => item.Sender)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>